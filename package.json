{
	"name": "obsidian-speech-bubbles",
	"version": "0.3.0",
	"description": "Renders transcription notes as message app style speech bubbles",
	"main": "main.js",
	"scripts": {
		"dev": "node esbuild.config.mjs",
		"dev:watch": "node esbuild.config.mjs --watch",
		"prod": "node esbuild.config.mjs --production",
		"typecheck": "tsc -noEmit -skipLibCheck",
		"format": "prettier --write .",
		"test": "jest",
		"test:dev": "yarn dev && jest",
		"test:watch": "yarn dev && jest --watch",
		"coverage": "yarn dev && jest --coverage",
		"lint": "eslint .",
		"build": "yarn typecheck && yarn lint && yarn format && yarn prod && yarn test",
		"ci": "yarn install --immutable",
		"version": "node version-bump.mjs && git add manifest.json versions.json",
		"build:css": "csso src/styles.src.css --output styles.css",
		"release": "node release.mjs",
		"tag-release": "git tag $(node -p \"require('./package.json').version\") && git push origin --tags"
	},
	"keywords": [
		"obsidian",
		"plugin",
		"speech-bubbles",
		"transcription"
	],
	"author": "Forketyfork",
	"license": "MIT",
	"engines": {
		"node": "^20.19.0 || ^22.13.0 || >=24"
	},
	"packageManager": "yarn@4.12.0",
	"devDependencies": {
		"@codemirror/state": "6.5.0",
		"@codemirror/view": "6.38.6",
		"@eslint/js": "^10.0.1",
		"@types/jest": "^30.0.0",
		"@types/node": "^25.2.1",
		"@typescript-eslint/eslint-plugin": "^8.54.0",
		"@typescript-eslint/parser": "^8.54.0",
		"builtin-modules": "^5.0.0",
		"csso-cli": "^4.0.2",
		"esbuild": "^0.27.3",
		"eslint": "^10.0.0",
		"globals": "^17.3.0",
		"jest": "^30.2.0",
		"jest-environment-jsdom": "^30.2.0",
		"obsidian": "latest",
		"prettier": "^3.8.0",
		"ts-jest": "^29.4.6",
		"tslib": "^2.8.1",
		"typescript": "^5.9.3"
	}
}
